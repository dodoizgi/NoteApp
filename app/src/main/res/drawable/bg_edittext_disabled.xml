<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_background" />
            <stroke
                android:width="1dp"
                android:color="#E7EAF3" />

            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_6" />
            <corners android:radius="7.75dp" />
        </shape>
    </item>
</layer-list>